{
  "name": "n8n-nodes-steam-client",
  "version": "1.0.8",
  "description": "Custom Steam client node for n8n with polling trigger",
  "main": "index.js",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "steam",
    "api",
    "gaming",
    "automation",
    "workflow",
    "trigger",
    "polling"
  ],
  "author": {
    "name": "Asyasyarif",
    "url": "https://github.com/Asyasyarif"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Asyasyarif/steam-client-n8n.git"
  },
  "bugs": {
    "url": "https://github.com/Asyasyarif/steam-client-n8n/issues"
  },
  "homepage": "https://github.com/Asyasyarif/steam-client-n8n#readme",
  "files": [
    "dist",
    "index.js"
  ],
  "scripts": {
    "build": "tsc && cp nodes/SteamClient/steam.svg dist/nodes/SteamClient/",
    "dev": "ts-node index.ts",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@types/luxon": "^3.7.1",
    "@types/node": "^20.0.0",
    "n8n-workflow": "^1.109.0",
    "typescript": "^5.9.3",
    "ts-node": "^10.9.2"
  },
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/SteamApiKey.credentials.js"
    ],
    "nodes": [
      "dist/nodes/SteamClient/SteamClient.node.js"
    ]
  },
  "engines": {
    "node": ">=18.10"
  }
}
